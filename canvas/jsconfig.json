{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "checkJs": true
    },
    "exclude": [
        "node_modules"
    ],
    "rootDir": [
        "/"
    ],
    "transform": {
        "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "js",
        "jsx",
        "json",
        "node"
    ]
}